<%= form_for @event||Event.new do |e| %>
  <%= e.text_field :title, placeholder:"What's going on?" %>

  <%= e.label :location_id, "Where:" %>
  <%= e.select(:location_id) do %>
    <% Location.all.each do |l| -%>
      <%= content_tag(:option, l.name, value: l.id) %>
    <% end %>
  <% end %>

  <!-- <#%= render :partial => 'locations/form', :locals => { :f => e} %> -->

  <%= e.label :when, "When:" %>
  <%= e.time_field :when %>
  <%= e.submit %>
<% end %>
